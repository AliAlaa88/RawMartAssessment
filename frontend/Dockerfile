# Build Stage
FROM node:20-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Production Stage (using Nginx to serve the build)
FROM nginx:stable-alpine
COPY --from=build /app/dist /usr/share/nginx/html
# You may need a custom nginx config to handle React Router (SPA)
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]